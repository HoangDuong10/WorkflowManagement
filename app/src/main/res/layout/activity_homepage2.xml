<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp">

        <ImageView

            android:id="@+id/menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/menu" />

        <ImageView

            android:id="@+id/bell"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/avata"
            android:src="@drawable/notification" />

        <ImageView
            android:id="@+id/avata"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/avata" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_below="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"
        >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, "
            android:textSize="16sp"
            android:textColor="#E14135"/>
        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Davidkkjsds"
            android:layout_toRightOf="@+id/text"/>
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn có 5 công việc ngày hôm nay"
            android:layout_below="@+id/text"
            android:textStyle="bold"
            android:textColor="@color/black"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative1"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginRight="30dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:src="@drawable/menu1" />
    </RelativeLayout>
    <HorizontalScrollView
        android:fillViewport="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/scroll"
        android:layout_below="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="230dp"
                android:layout_height="280dp"
                android:background="@drawable/backgroung_task">
                <ImageView

                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/signal"
                   />
                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 công việc"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30dp"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa hoàn thành"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30dp"
                    android:textSize="22dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="30dp"
                    >
                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/smith2"
                        android:layout_alignParentBottom="true"
                        />

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="-15dp"
                        android:layout_toRightOf="@+id/image4"
                        android:src="@drawable/smith4"

                        />
                    <ImageView
                        android:layout_toRightOf="@+id/image5"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/smith5"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="-15dp"
                        />
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="+"
                        android:textColor="@color/white"
                        android:background="@drawable/oval_button"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:layout_width="230dp"
                android:layout_height="280dp"
                android:background="@drawable/backgroung_task">
                <ImageView

                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/signal"
                    />
                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 công việc"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30dp"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa hoàn thành"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30dp"
                    android:textSize="22dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="30dp"
                    >
                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/smith2"
                        android:layout_alignParentBottom="true"
                        />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="-15dp"
                        android:layout_toRightOf="@+id/image2"
                        android:src="@drawable/smith4"

                        />
                    <ImageView
                        android:layout_toRightOf="@+id/image3"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/smith5"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="-15dp"
                        />
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="+"
                        android:textColor="@color/white"
                        android:background="@drawable/oval_button"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:layout_width="230dp"
                android:layout_height="280dp"
                android:background="@drawable/backgroung_task">
                <ImageView

                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/signal"
                    />
                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 công việc"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30dp"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa hoàn thành"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30dp"
                    android:textSize="22dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="30dp"
                    >
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/smith2"
                        android:layout_alignParentBottom="true"
                        />

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="-15dp"
                        android:layout_toRightOf="@+id/image"
                        android:src="@drawable/smith4"

                        />
                    <ImageView
                        android:layout_toRightOf="@+id/image1"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/smith5"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="-15dp"
                        />
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="+"
                        android:textColor="@color/white"
                        android:background="@drawable/oval_button"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày"
            android:textSize="22sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuần "
            android:textSize="22sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tháng"
            android:textSize="22sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"

        app:itemIconTint="@color/custom_bottom_navi"
        app:itemTextColor="@color/white"
        app:menu="@menu/menu_bottom"
        app:labelVisibilityMode="labeled"
       />

</RelativeLayout>